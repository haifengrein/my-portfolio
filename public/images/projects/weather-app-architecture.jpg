  <path d="M380,450 L380,480" stroke="#7c3aed" stroke-width="2" fill="none" stroke-dasharray="5,5" />
  <path d="M520,450 L520,465 L400,465" stroke="#7c3aed" stroke-width="2" fill="none" stroke-dasharray="5,5" />
  <path d="M660,450 L660,465 L400,465" stroke="#7c3aed" stroke-width="2" fill="none" stroke-dasharray="5,5" />
